
{{>topbar}}


<div id="sign-up" class="container w-75" onsubmit='return false;'>
    <form class="form-sign" onsubmit='return false;'>
        <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
        {{#message}}<div  class="alert alert-warning">{{message}}</div>{{/message}}
        <label for="inputNomSU" class="sr-only">Nom</label>
        <input type="text" id="inputNomSU" class="form-control" placeholder="Nom" required="" autofocus="">

        <label for="inputPrenomSU" class="sr-only">Prénom</label>
        <input type="text" id="inputPrenomSU" class="form-control" placeholder="Prénom" required="" autofocus="">

        <label for="inputEmailSU" class="sr-only">Adresse Email</label>
        <input type="email" placeholder="toto@popo.cpp" class="form-control mt-3" id="inputEmailSU" required>

        <label for="inputPhoneSU" class="sr-only">Téléphone portable</label>
        <input type="tel" id="inputPhoneSU" class="form-control mt-3" placeholder="Téléphone portable"
               pattern="[0-9]{10}" required="" autofocus="">

        <label for="inputPhotoSU" class="mt-3">Photo (facultatif)</label>
        <input type="file" accept=".jpg,.jpeg,.png" class="form-control-file" id="inputPhotoSU">

        <label for="inputPasswordSU" class="sr-only">Mot de passe</label>
        <input type="password" id="inputPasswordSU" class="form-control mt-3" placeholder="Mot de passe"
               required="">

        <label for="inputPasswordVerifSU" class="sr-only">Tapez à nouveau le mot de passe</label>
        <input type="password" id="inputPasswordVerifSU" class="form-control"
               placeholder="Tapez à nouveau le mot de passe" required="">

        <button class="btn btn-lg btn-primary btn-block mt-3" id="signup-btn" type="submit">S'inscrire</button>
    </form>
</div>

